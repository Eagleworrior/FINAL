ðŸŒ api/openapi.yaml

`yaml
openapi: 3.0.3
info:
  title: EAGLE X API
  version: 1.0.0
paths:
  /onboarding:
    post:
      summary: Create steward profile
      responses:
        "200": { description: Created }
  /guardians/invite:
    post:
      summary: Invite guardian
      responses:
        "200": { description: OK }
  /oaths/sign:
    post:
      summary: Sign oath
      responses:
        "200": { description: OK }
  /trade/list:
    post:
      summary: Create listing
      responses:
        "200": { description: OK }
  /escrow/open:
    post:
      summary: Open escrow
      responses:
        "200": { description: OK }
  /monuments/near:
    get:
      summary: Nearby monuments
      parameters:
        - name: lat
          in: query
          schema: { type: number }
        - name: lng
          in: query
          schema: { type: number }
        - name: radius
          in: query
          schema: { type: integer }
      responses:
        "200": { description: OK }
  /markets/overview:
    get:
      summary: Markets overview
      responses:
        "200": { description: OK }
  /markets/technicals:
    get:
      summary: Indicators
      responses:
        "200": { description: OK }
`

